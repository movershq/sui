{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": false,
        "isolatedModules": true,
        "outDir": "../../dist",
        "baseUrl": "../../",
        "paths": {
            // for internal aliases start them with ~ for eslint to use the correct import group
            "~src/*": ["./src/*"],
            "~assets/*": ["./src/ui/assets/*"],
            "~images/*": ["./src/ui/assets/images/*"],
            "~redux/*": ["./src/ui/app/redux/*"],
            "~store": ["./src/ui/app/redux/store/"],
            "~hooks": ["./src/ui/app/hooks/"]
        }
    },
    "include": ["../../src"],
    "exclude": ["../../build", "../../node_modules"]
}
